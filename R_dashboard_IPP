  `Comércio, reparação de veículos automotores e motocicletas` = number(`Comércio, reparação de veículos automotores e motocicletas`, big.mark = ".", decimal.mark = ","),
  `Transporte, armazenagem e correio` = number(`Transporte, armazenagem e correio`, big.mark = ".", decimal.mark = ","),
  `Alojamento e alimentação` = number(`Alojamento e alimentação`, big.mark = ".", decimal.mark = ","),
