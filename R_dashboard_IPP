    data = pim_sec_ativ_mg,
    x = ~data,
    y = ~as.numeric(gsub(",", ".", `2 Indústrias extrativas`)),
    type = "scatter",
    mode = "lines",
    name = "Indústrias extrativas"
  ) %>%
