## GOVERNO FEDERAL SEM INSS:
rp_govfedseminss_reais_corr <- get_series(
  code = c(valor_rp_govfedseminss_reais_corr = 7853)
) %>% dplyr::filter(date >= "1996-01-01")

rp_govfedseminss_acum_ano <- get_series(
  code = c(valor_rp_govfedseminss_acum_ano = 7855)
) %>% dplyr::filter(date >= "1996-01-01")

rp_govfedseminss_acum_12m <- get_series(
  code = c(valor_rp_govfedseminss_acum_12m = 7859)
) %>% dplyr::filter(date >= "1996-01-01")

rp_govfedseminss_mensal_pib <- get_series(
  code = c(valor_rp_govfedseminss_mensal_pib = 7863)
) %>% dplyr::filter(date >= "1996-01-01")

rp_govfedseminss_acum_ano_pib <- get_series(
  code = c(valor_rp_govfedseminss_acum_ano_pib = 7865)
) %>% dplyr::filter(date >= "1996-01-01")

rp_govfedseminss_acum_12m_pib <- get_series(
  code = c(valor_rp_govfedseminss_acum_12m_pib = 7869)
) %>% dplyr::filter(date >= "1996-01-01")

rp_govfedseminss <- rp_govfedseminss_reais_corr %>% 
  left_join(rp_govfedseminss_acum_ano) %>% 
  left_join(rp_govfedseminss_acum_12m) %>% 
  left_join(rp_govfedseminss_mensal_pib) %>% 
  left_join(rp_govfedseminss_acum_ano_pib) %>% 
  left_join(rp_govfedseminss_acum_12m_pib) %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_rp_govfedseminss_reais_corr = number(valor_rp_govfedseminss_reais_corr, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_govfedseminss_acum_ano = number(valor_rp_govfedseminss_acum_ano, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_govfedseminss_acum_12m = number(valor_rp_govfedseminss_acum_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_govfedseminss_mensal_pib = number(valor_rp_govfedseminss_mensal_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_govfedseminss_acum_ano_pib = number(valor_rp_govfedseminss_acum_ano_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_govfedseminss_acum_12m_pib = number(valor_rp_govfedseminss_acum_12m_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
  ) %>% select(data_fmt, valor_rp_govfedseminss_reais_corr, valor_rp_govfedseminss_acum_ano, valor_rp_govfedseminss_acum_12m, valor_rp_govfedseminss_mensal_pib, valor_rp_govfedseminss_acum_ano_pib, valor_rp_govfedseminss_acum_12m_pib, date) %>% 
  arrange(desc(date))

## INSS:
rp_inss_reais_corr <- get_series(
  code = c(valor_rp_inss_reais_corr = 7854)
) %>% dplyr::filter(date >= "1996-01-01")

rp_inss_acum_ano <- get_series(
  code = c(valor_rp_inss_acum_ano = 7856)
) %>% dplyr::filter(date >= "1996-01-01")

rp_inss_acum_12m <- get_series(
  code = c(valor_rp_inss_acum_12m = 7860)
) %>% dplyr::filter(date >= "1996-01-01")

rp_inss_mensal_pib <- get_series(
  code = c(valor_rp_inss_mensal_pib = 7864)
) %>% dplyr::filter(date >= "1996-01-01")

rp_inss_acum_ano_pib <- get_series(
  code = c(valor_rp_inss_acum_ano_pib = 7866)
) %>% dplyr::filter(date >= "1996-01-01")

rp_inss_acum_12m_pib <- get_series(
  code = c(valor_rp_inss_acum_12m_pib = 7870)
) %>% dplyr::filter(date >= "1996-01-01")

rp_inss <- rp_inss_reais_corr %>% 
  left_join(rp_inss_acum_ano) %>% 
  left_join(rp_inss_acum_12m) %>% 
  left_join(rp_inss_mensal_pib) %>% 
  left_join(rp_inss_acum_ano_pib) %>% 
  left_join(rp_inss_acum_12m_pib) %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_rp_inss_reais_corr = number(valor_rp_inss_reais_corr, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_inss_acum_ano = number(valor_rp_inss_acum_ano, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_inss_acum_12m = number(valor_rp_inss_acum_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_inss_mensal_pib = number(valor_rp_inss_mensal_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_inss_acum_ano_pib = number(valor_rp_inss_acum_ano_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rp_inss_acum_12m_pib = number(valor_rp_inss_acum_12m_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
  ) %>% select(data_fmt, valor_rp_inss_reais_corr, valor_rp_inss_acum_ano, valor_rp_inss_acum_12m, valor_rp_inss_mensal_pib, valor_rp_inss_acum_ano_pib, valor_rp_inss_acum_12m_pib, date) %>% 
  arrange(desc(date))














