# TAXA REFERENCIAL DI X PREFIXADA - SWAPS

di_180 <- ipeadata(c = "BMF12_SWAPDI180F12") %>% mutate(
  valor_di_180 = value
) %>% mutate(
  var_mg_180 = valor_di_180 - lag(valor_di_180),
  var_12m_180 = valor_di_180 - lag(valor_di_180, 12)
) %>% select(date, valor_di_180, var_mg_180, var_12m_180)

di_360 <- ipeadata(c = "BMF12_SWAPDI360F12") %>% mutate(
  valor_di_360 = value
) %>% mutate(
  var_mg_360 = valor_di_360 - lag(valor_di_360),
  var_12m_360 = valor_di_360 - lag(valor_di_360, 12)
) %>% select(date, valor_di_360, var_mg_360, var_12m_360)

di <- left_join(di_180, di_360) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_di_180 = number(valor_di_180, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  var_mg_180 = number(var_mg_180, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  var_12m_180 = number(var_12m_180, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_di_360 = number(valor_di_360, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  var_mg_360 = number(var_mg_360, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  var_12m_360 = number(var_12m_360, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_di_180, var_mg_180,var_12m_180, valor_di_360, var_mg_360, var_12m_360, date) %>% arrange(desc(date))

# IPCA - NÚCLEOS E DIFUSÃO:
ipca_mensal_nuc_dif <- get_series(
  code = c(valor_ipca = 433)
) %>% dplyr::filter(date >= "1995-01-01")

