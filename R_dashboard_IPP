```{r, cache=TRUE}
# Coleta de dados:

# API key FRED
fredr_set_key("0087fc9b146c214d78104e3737039ea4")

# Sys.setlocale("LC_ALL", "pt_BR.UTF-8")

# PESQUISA MENSAL DO COMÉRCIO - COMÉRCIO VAREJISTA:
## IRNV:
pmc_com_var <- sidrar::get_sidra(
  api = "/t/8880/n1/all/v/7170,11708,11709,11710/p/all/c11046/all/d/v7170%205,v11708%201,v11709%201,v11710%201")

pmc_com_var <- pmc_com_var %>% mutate(
  date = lubridate::ym(`Mês (Código)`),
  variavel = Variável,
  indice = `Tipos de índice`,
  valor = Valor,
  .keep = "none"
)

pmc_com_var_ni_irnv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Número-índice com ajuste sazonal (2022=100)" & indice == "Índice de receita nominal de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_ni_irnv = valor
) %>% mutate(
  valor_ni_irnv = number(valor_ni_irnv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_ni_irnv, date) %>% arrange(desc(date))

pmc_com_var_mg_irnv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Variação mês/mês imediatamente anterior, com ajuste sazonal (M/M-1)" & indice == "Índice de receita nominal de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_mg_irnv = valor
) %>% mutate(
  valor_mg_irnv = number(valor_mg_irnv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_mg_irnv, date) %>% arrange(desc(date))

pmc_com_var_12m_irnv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Variação mês/mesmo mês do ano anterior (M/M-12)" & indice == "Índice de receita nominal de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_12m_irnv = valor
) %>% mutate(
  valor_12m_irnv = number(valor_12m_irnv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_12m_irnv, date) %>% arrange(desc(date))

pmc_com_var_acum_ano_irnv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Variação acumulada no ano (em relação ao mesmo período do ano anterior)" & indice == "Índice de receita nominal de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_acum_ano_irnv = valor
) %>% mutate(
  valor_acum_ano_irnv = number(valor_acum_ano_irnv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_acum_ano_irnv, date) %>% arrange(desc(date))

## IVV:
pmc_com_var_ni_ivv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Número-índice com ajuste sazonal (2022=100)" & indice == "Índice de volume de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_ni_ivv = valor
) %>% mutate(
  valor_ni_ivv = number(valor_ni_ivv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_ni_ivv, date) %>% arrange(desc(date))

pmc_com_var_mg_ivv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Variação mês/mês imediatamente anterior, com ajuste sazonal (M/M-1)" & indice == "Índice de volume de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_mg_ivv = valor
) %>% mutate(
  valor_mg_ivv = number(valor_mg_ivv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_mg_ivv, date) %>% arrange(desc(date))

pmc_com_var_12m_ivv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Variação mês/mesmo mês do ano anterior (M/M-12)" & indice == "Índice de volume de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_12m_ivv = valor
) %>% mutate(
  valor_12m_ivv = number(valor_12m_ivv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_12m_ivv, date) %>% arrange(desc(date))

pmc_com_var_acum_ano_ivv <- pmc_com_var %>% dplyr::filter(variavel == "PMC - Variação acumulada no ano (em relação ao mesmo período do ano anterior)" & indice == "Índice de volume de vendas no comércio varejista") %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_acum_ano_ivv = valor
) %>% mutate(
  valor_acum_ano_ivv = number(valor_acum_ano_ivv, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_acum_ano_ivv, date) %>% arrange(desc(date))

pmc_com_var_table <- pmc_com_var_ni_irnv %>% left_join(pmc_com_var_ni_ivv) %>% left_join(pmc_com_var_mg_irnv) %>% left_join(pmc_com_var_mg_ivv) %>% left_join(pmc_com_var_acum_ano_irnv) %>% left_join(pmc_com_var_acum_ano_ivv) %>% left_join(pmc_com_var_12m_irnv) %>% left_join(pmc_com_var_12m_ivv) %>% mutate(
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, valor_ni_irnv, valor_mg_irnv, valor_acum_ano_irnv, valor_12m_irnv,
             valor_ni_ivv, valor_mg_ivv, valor_acum_ano_ivv, valor_12m_ivv, date)

# PESQUISA MENSAL DO COMÉRCIO - COMÉRCIO VAREJISTA AMPLIADO:
## IRNV:
pmc_com_amp <- sidrar::get_sidra(
  api = "/t/8881/n1/all/v/7170,11708,11709,11710/p/all/c11046/all/d/v7170%205,v11708%201,v11709%201,v11710%201")

