  `7. Serviços técnico-profissionais` = number(`7. Serviços técnico-profissionais`, big.mark = ".", decimal.mark = ","),
  `8. Aluguéis não imobiliários` = number(`8. Aluguéis não imobiliários`, big.mark = ".", decimal.mark = ","),
  `9. Serviços de apoio às atividades empresariais` = number(`9. Serviços de apoio às atividades empresariais`, big.mark = ".", decimal.mark = ","),
  `10. Transporte rodoviário de cargas` = number(`10. Transporte rodoviário de cargas`, big.mark = ".", decimal.mark = ","),
  `11. Transporte rodoviário de passageiros` = number(`11. Transporte rodoviário de passageiros`, big.mark = ".", decimal.mark = ","),
  `12. Outros segmentos do transporte terrestre` = number(`12. Outros segmentos do transporte terrestre`, big.mark = ".", decimal.mark = ","),
  `13. Transporte aquaviário` = number(`13. Transporte aquaviário`, big.mark = ".", decimal.mark = ","),
  `14. Transporte aéreo` = number(`14. Transporte aéreo`, big.mark = ".", decimal.mark = ","),
  `15. Armazenagem, serviços auxiliares aos transportes e correio` = number(`15. Armazenagem, serviços auxiliares aos transportes e correio`, big.mark = ".", decimal.mark = ","),
