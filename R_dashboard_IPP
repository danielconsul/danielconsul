  data = cf, 
  x = ~date, 
  y = ~as.numeric(gsub(",", ".", cf_pib)),
  type = "bar"
) %>%
  layout(
    xaxis = list(title = " "),
    yaxis = list(
      title = "%",
      tick0 = 0,
      dtick = 1
    )
  ) %>%
