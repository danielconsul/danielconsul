# PESQUISA TRIMESTRAL DO LEITE:
ptl <- sidrar::get_sidra(
  api = "/t/1086/n1/all/v/282,283,2522/p/all/c12716/115236/c12529/118225/d/v282%200,v283%200,v2522%202"
)

ptl <- ptl %>% mutate(
  date = lubridate::ym(`Trimestre (Código)`),
  variavel = Variável,
  valor = Valor,
  .keep = "none"
)

ptl_table <- ptl %>% pivot_wider(names_from = variavel, values_from = valor) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  `Quantidade de leite cru, resfriado ou não, adquirido` = number(`Quantidade de leite cru, resfriado ou não, adquirido`, big.mark = ".", decimal.mark = ","),
  `Quantidade de leite cru, resfriado ou não, industrializado` = number(`Quantidade de leite cru, resfriado ou não, industrializado`, big.mark = ".", decimal.mark = ","),
  `Preço médio` = number(`Preço médio`, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, `Quantidade de leite cru, resfriado ou não, adquirido`, `Quantidade de leite cru, resfriado ou não, industrializado`, `Preço médio`, date) %>% arrange(desc(date))

ptl_graph <- ptl %>% pivot_wider(names_from = variavel, values_from = valor) %>% mutate(
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, `Quantidade de leite cru, resfriado ou não, adquirido`, `Quantidade de leite cru, resfriado ou não, industrializado`, `Preço médio`, date) %>% arrange(desc(date))

# PESQUISA TRIMESTRAL DO ABATE:
## Bovinos
pta_bovinos <- sidrar::get_sidra(
  api = "/t/1092/n1/all/v/284/p/all/c12716/115236/c18/992/c12529/118225"
)

pta_bovinos <- pta_bovinos %>% mutate(
  date = lubridate::ym(`Trimestre (Código)`),
  valor_bovinos = Valor,
  .keep = "none"
)

## Suínos
pta_suinos <- sidrar::get_sidra(
  api = "/t/1093/n1/all/v/284/p/all/c12716/115236/c12529/118225"
)

pta_suinos <- pta_suinos %>% mutate(
  date = lubridate::ym(`Trimestre (Código)`),
  valor_suinos = Valor,
  .keep = "none"
)

## Frangos
pta_frangos <- sidrar::get_sidra(
  api = "/t/1094/n1/all/v/284/p/all/c12716/115236/c12529/118225"
)

pta_frangos <- pta_frangos %>% mutate(
  date = lubridate::ym(`Trimestre (Código)`),
  valor_frangos = Valor,
  .keep = "none"
)

pta <- pta_bovinos %>% left_join(pta_suinos) %>% left_join(pta_frangos) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_bovinos = number(valor_bovinos, big.mark = ".", decimal.mark = ","),
  valor_suinos = number(valor_suinos, big.mark = ".", decimal.mark = ","),
  valor_frangos = number(valor_frangos, big.mark = ".", decimal.mark = ","),
) %>% select(data_fmt, valor_bovinos, valor_suinos, valor_frangos, date) %>% 
  arrange(desc(date))

pta_graph <- pta_bovinos %>% left_join(pta_suinos) %>% left_join(pta_frangos) %>% mutate(
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, valor_bovinos, valor_suinos, valor_frangos, date) %>% 
  arrange(desc(date))

