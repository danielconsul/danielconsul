# REGRA DE TAYLOR:

# Coleta e tratamento dos dados -------------------------------------------

# Selic acumulada no mês anualizada base 252 - Freq. mensal - Unid. % a.a.
selic_rt <- rbcb::get_series(code = c("selic" = 4189), start_date = "1999-01-01") |>
  # Trimestralizar a série (média)
  dplyr::group_by(data = tsibble::yearquarter(date)) |>
  dplyr::summarise(selic = mean(selic))

# Criar desvio entre inflação esperada e meta de inflação
# Coleta expectativa acumulada em 12 meses do IPCA - FOCUS
ipca_exp_12m_rt <- rbcb::get_twelve_months_inflation_expectations(
  indic = "IPCA",
  end_date = Sys.Date()
) |>
  # Trimestraliza expectativa (média)
  dplyr::filter(base == 0, smoothed == "S") |>
  dplyr::group_by(data = tsibble::yearquarter(date)) |>
  dplyr::summarise(ipca_exp_12m = mean(median, na.rm = TRUE), .groups = "drop")

# Meta para a inflação - CMN - Freq. anual - %
meta_inflacao_rt <- rbcb::get_series(
  code = c("meta" = 13521),
  start_date = "1999-01-01",
  end_date = Sys.Date() + 10*365
) |>
  # Repete cada linha 4 vezes
  tidyr::uncount(4) |>
  # Cria vetor de datas trimestrais
  dplyr::mutate(
    data = seq(
      from = dplyr::first(date),
      by = "quarter",
      length.out = length(date)
    ) |>
      tsibble::yearquarter(),
    meta = meta,
    .keep = "none"
  )

# Importar o hiato do produto
# Importa via IFI
hiato_ifi_rt <- rio::import(
  file = paste0(
    "https://www12.senado.leg.br/ifi/dados/arquivos/estimativas-do-hiato-do-produto-ifi.xlsx"
  ),
  format = "xlsx",
  setclass = "tibble",
  sheet = "Hiato do Produto",
  skip = 1
) |>
  dplyr::mutate(
    data = tsibble::yearquarter(`Trim-Ano`),
    hiato = `Hiato` * 100,
    .keep = "none"
  )

# Reunir os dados ----
dados_reg_rt <- purrr::reduce(
  .x = list(selic_rt, ipca_exp_12m_rt, meta_inflacao_rt, hiato_ifi_rt),
  .f = dplyr::full_join,
  by = "data"
) |>
  dplyr::arrange(data) |>
  dplyr::mutate(
    selic_lag1 = dplyr::lag(selic, 1),
    selic_lag2 = dplyr::lag(selic, 2),
    meta_lead4 = dplyr::lead(meta, 4),
    desvio = ipca_exp_12m - meta_lead4,
    hiato_lag1 = dplyr::lag(hiato, 1)
  ) |>
  tidyr::drop_na() |>
  as.data.frame()

# Estimação
eq_taylor_rt <- systemfit::systemfit(
  formula = selic ~ selic_lag1 + selic_lag2 + desvio + hiato_lag1,
  method = "OLS",
  data = dados_reg_rt
)

# Selic estimada:
selic_estimada_rt <- dados_reg_rt$selic - residuals(eq_taylor_rt)
selic_estimada2_rt <- fitted(eq_taylor_rt)$eq1 %>% as.data.frame()

# Gráfico dos resíduos
residuos_rt <- dplyr::tibble(
  data = dados_reg_rt$data,
  residuos = residuals(eq_taylor_rt)$eq
)

# Gráfico dos valores estimados da taxa de juros pela Regra de Taylor
ajuste_rt <- dplyr::tibble(
  data = dados_reg_rt$data,
  ajuste = fitted(eq_taylor_rt)$eq1
)

regra_taylor <- left_join(selic_rt, ajuste_rt) %>% mutate(
  desvio = selic - ajuste
) %>% mutate(
  data_fmt = format(data, "%m/%Y"),
  selic = number(selic, decimal.mark = ",", accuracy = 0.01),
  ajuste = number(ajuste, decimal.mark = ",", accuracy = 0.01),
  desvio = number(desvio, decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, selic, ajuste, desvio, data) %>% drop_na() %>% arrange(desc(data))

# TAXA DE JUROS CDI:
cdi_mensal <- get_series(
  code = c(cdi_mensal = 4391)
)

cdi_anual <- get_series(
  code = c(cdi_anual = 4392)
)

cdi <- left_join(cdi_mensal, cdi_anual)

cdi <- cdi %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  cdi_mensal = number(cdi_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  cdi_anual = number(cdi_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, cdi_mensal, cdi_anual, date) %>% filter(date >= "1996-01-01") %>% arrange(desc(date))

# SALÁRIO MÍNIMO REAL, VIGENTE E PARIDADE DO PODER DE COMPRA:
sal_min_real <- ipeadata(code = "GAC12_SALMINRE12") %>% mutate(
  valor_sal_real = value,
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, valor_sal_real, date)

sal_min_vigente <- ipeadata(code = "MTE12_SALMIN12") %>% mutate(
  valor_sal_vigente = value,
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, valor_sal_vigente, date)

sal_min_ppc <- ipeadata(code = "GAC12_SALMINDOL12") %>% mutate(
  valor_sal_ppc = value,
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, valor_sal_ppc, date)

sal_min <- sal_min_real %>% left_join(sal_min_vigente) %>% left_join(sal_min_ppc) %>% mutate(
  valor_sal_real = number(valor_sal_real, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_sal_ppc = number(valor_sal_ppc, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_sal_vigente = number(valor_sal_vigente, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_sal_vigente, valor_sal_real, valor_sal_ppc, date) %>% arrange(desc(date))

sal_min_graph <- sal_min_real %>% left_join(sal_min_vigente) %>% left_join(sal_min_ppc) %>% select(data_fmt, valor_sal_vigente, valor_sal_real, valor_sal_ppc, date) %>% arrange(desc(date)) %>% 
  filter(date >= "1994-07-01")

# HIATO DO PRODUTO (IFI):
hiato_ifi <- rio::import(
  file = paste0(
    "https://www12.senado.leg.br/ifi/dados/arquivos/",
    "estimativas-do-hiato-do-produto-ifi.xlsx"
    ),
  format = "xlsx",
  setclass = "tibble",
  sheet = "Hiato do Produto",
  skip = 1
  ) |>
  dplyr::mutate(
    data = tsibble::yearquarter(`Trim-Ano`),
    hiato = `Hiato` * 100,
    lim_inf = `Limite inferior` * 100,
    lim_sup = `Limite superior` * 100,
    .keep = "none"
  ) %>% mutate(
    data_fmt = format(data, "%m/%Y"),
    hiato = number(hiato, decimal.mark = ",", accuracy = 0.1),
    lim_inf = number(lim_inf, decimal.mark = ",", accuracy = 0.1),
    lim_sup = number(lim_sup, decimal.mark = ",", accuracy = 0.1)
  ) %>% select(data_fmt, lim_inf, hiato, lim_sup, data) %>% arrange(desc(data)) 

# CAGED:
caged_adm <- ipeadata(code = "CAGED12_ADMISN12") %>% mutate(
  adm = value
) %>% select(date, adm)

caged_dem <- ipeadata(code = "CAGED12_DESLIGN12") %>% mutate(
  dem = value
) %>% select(date, dem)

caged_saldo <- ipeadata(code = "CAGED12_SALDON12") %>% mutate(
  saldo = value
) %>% select(date, saldo)

caged <- caged_adm %>% left_join(caged_dem) %>% left_join(caged_saldo) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  adm = number(adm, big.mark = ".", decimal.mark = ","),
  dem = number(dem, big.mark = ".", decimal.mark = ",", ),
  saldo = number(saldo, big.mark = ".", decimal.mark = ",")
) %>% select(data_fmt, adm, dem, saldo, date) %>% arrange(desc(date))

caged_graph <- caged_adm %>% left_join(caged_dem) %>% left_join(caged_saldo) %>% mutate(
  data_fmt = format(date, "%m/%Y")
) %>% select(data_fmt, adm, dem, saldo, date) %>% arrange(desc(date))

# PIM-PF:
pim_sec_ativ <- sidrar::get_sidra(
  api = "/t/8888/n1/all/v/11601,11602,11603/p/all/c544/all/d/v11601%201,v11602%201,v11603%201"
)

pim_sec_ativ <- pim_sec_ativ %>% mutate(
  data = lubridate::ym(`Mês (Código)`),
  variavel = Variável,
  sec_ativ = `Seções e atividades industriais (CNAE 2.0)`,
