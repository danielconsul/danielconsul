# PESQUISA MENSAL DE SERVIÇOS (PMS) - ÍNDICE NOMINAL DE SERVIÇOS:
pms_rec <- sidrar::get_sidra(
  api = "/t/8163/n1/all/v/11623,11624,11625/p/all/c11046/56725/c1274/all/d/v11623%201,v11624%201,v11625%201"
)

pms_rec <- pms_rec %>% mutate(
  date = lubridate::ym(`Mês (Código)`),
  variavel = Variável,
  valor = Valor,
  segmentos = `Segmentos de serviços`,
  .keep = "none"
)

pms_seg_mg_rec <- pms_rec %>% dplyr::filter(variavel == "PMS - Variação mês/mês imediatamente anterior, com ajuste sazonal (M/M-1)") %>% pivot_wider(names_from = segmentos, values_from = valor) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  `Total` = number(`Total`, big.mark = ".", decimal.mark = ","),
  `1. Alojamento` = number(`1. Alojamento`, big.mark = ".", decimal.mark = ","),
