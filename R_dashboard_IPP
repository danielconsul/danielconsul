      align = "center",
      headerStyle = list(textAlign = "center", verticalAlign = "middle")
    ),
    valor_ipca_ex0 = colDef(
      name = "Núcleo EX0",
      align = "center",
      headerStyle = list(textAlign = "center", verticalAlign = "middle")
    ),
    valor_ipca_ex1 = colDef(
      name = "Núcleo EX1",
      align = "center",
      headerStyle = list(textAlign = "center", verticalAlign = "middle")
    ),
    valor_ipca_ex2 = colDef(
      name = "Núcleo EX2",
      align = "center",
      headerStyle = list(textAlign = "center", verticalAlign = "middle")
    ),
    valor_ipca_ex3 = colDef(
      name = "Núcleo EX3",
      align = "center",
      headerStyle = list(textAlign = "center", verticalAlign = "middle")
    ),
