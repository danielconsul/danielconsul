  data = lubridate::ym(`Mês (Código)`),
  variavel = Variável,
  grupos = `Geral, grupo, subgrupo, item e subitem`,
  valor = Valor,
  .keep = "none",  
) %>% pivot_wider(names_from = grupos, values_from = valor) %>% 
