    valor_rp_estataismunic_acum_12m_pib = colDef(
      name = "Acum. em 12 meses (% do PIB)",
      align = "center",
      headerStyle = list(textAlign = "center", verticalAlign = "middle")
    )    
  ),
  bordered = TRUE,
  highlight = TRUE,
