  left_join(ipca_ex0) %>% 
  left_join(ipca_ex1) %>%
  left_join(ipca_ex2) %>%
  left_join(ipca_ex3) %>%
  left_join(ipca_dp) %>%
  left_join(ipca_p55) %>%
  left_join(ipca_ex_alim_energ) %>%
  left_join(ipca_dif) %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_ipca = number(valor_ipca, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_ex0 = number(valor_ipca_ex0, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_ex1 = number(valor_ipca_ex1, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_ex2 = number(valor_ipca_ex2, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_ex3 = number(valor_ipca_ex3, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_dp = number(valor_ipca_dp, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_p55 = number(valor_ipca_p55, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_ex_alim_energ = number(valor_ipca_ex_alim_energ, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_ipca_dif = number(valor_ipca_dif, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
  ) %>% select(data_fmt, valor_ipca, valor_ipca_ex0, valor_ipca_ex1, valor_ipca_ex2, valor_ipca_ex3, valor_ipca_dp, valor_ipca_p55, valor_ipca_ex_alim_energ, valor_ipca_dif, date) %>% 
  arrange(desc(date))

