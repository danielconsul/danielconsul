# CÂMBIO CONTRATADO (MENSAL):
cc_exp_mensal <- get_series(
  code = c(valor_exp_mensal = 11045))

cc_imp_mensal <- get_series(
  code = c(valor_imp_mensal = 11046))

cc_com_saldo_mensal <- get_series(
  code = c(valor_com_saldo_mensal = 11047))

cc_compra_mensal <- get_series(
  code = c(valor_compra_mensal = 11048))

cc_venda_mensal <- get_series(
  code = c(valor_venda_mensal = 11049))

cc_fin_saldo_mensal <- get_series(
  code = c(valor_fin_saldo_mensal = 11050))

cambio_contratado_mensal <- cc_exp_mensal %>% left_join(cc_imp_mensal) %>% 
  left_join(cc_com_saldo_mensal) %>% left_join(cc_compra_mensal) %>% left_join(cc_venda_mensal) %>% 
  left_join(cc_fin_saldo_mensal)

cambio_contratado_mensal <- cambio_contratado_mensal %>% mutate(
  cc_saldo = valor_com_saldo_mensal + valor_fin_saldo_mensal
) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  valor_exp_mensal = number(valor_exp_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_imp_mensal = number(valor_imp_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_com_saldo_mensal = number(valor_com_saldo_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_compra_mensal = number(valor_compra_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_venda_mensal = number(valor_venda_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_fin_saldo_mensal = number(valor_fin_saldo_mensal, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  cc_saldo = number(cc_saldo, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
) %>% select(data_fmt, valor_exp_mensal, valor_imp_mensal, valor_com_saldo_mensal,
             valor_compra_mensal, valor_venda_mensal, valor_fin_saldo_mensal,
             cc_saldo, date) %>% arrange(desc(date))

# CÂMBIO CONTRATADO (ANUAL):
cc_exp_anual <- get_series(
  code = c(valor_exp_anual = 11056))

cc_imp_anual <- get_series(
  code = c(valor_imp_anual = 11057))

cc_com_saldo_anual <- get_series(
  code = c(valor_com_saldo_anual = 11058))

cc_compra_anual <- get_series(
  code = c(valor_compra_anual = 11059))

cc_venda_anual <- get_series(
  code = c(valor_venda_anual = 11060))

cc_fin_saldo_anual <- get_series(
  code = c(valor_fin_saldo_anual = 11061))

cambio_contratado_anual <- cc_exp_anual %>% left_join(cc_imp_anual) %>% 
  left_join(cc_com_saldo_anual) %>% left_join(cc_compra_anual) %>% left_join(cc_venda_anual) %>% 
  left_join(cc_fin_saldo_anual)

cambio_contratado_anual <- cambio_contratado_anual %>% mutate(
  cc_saldo = valor_com_saldo_anual + valor_fin_saldo_anual
) %>% mutate(
  data_fmt = format(date, "%Y"),
  valor_exp_anual = number(valor_exp_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_imp_anual = number(valor_imp_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_com_saldo_anual = number(valor_com_saldo_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_compra_anual = number(valor_compra_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_venda_anual = number(valor_venda_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  valor_fin_saldo_anual = number(valor_fin_saldo_anual, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  cc_saldo = number(cc_saldo, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
) %>% select(data_fmt, valor_exp_anual, valor_imp_anual, valor_com_saldo_anual,
             valor_compra_anual, valor_venda_anual, valor_fin_saldo_anual,
             cc_saldo, date) %>% arrange(desc(date))


# TRANSAÇÕES CORRENTES:
trans_cor_rec <- get_series(
  code = c(valor_rec = 22702)
)

trans_cor_desp <- get_series(
  code = c(valor_desp = 22703)
)

trans_cor_saldo <- get_series(
  code = c(valor_saldo = 22701)
)

trans_cor <- left_join(trans_cor_rec, trans_cor_desp)
trans_cor <- left_join(trans_cor, trans_cor_saldo)

trans_cor <- trans_cor %>% mutate(
    valor_rec = valor_rec / 1000,
    valor_desp = valor_desp / 1000,
    valor_saldo = valor_saldo / 1000
) %>% 
  mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_rec = number(valor_rec, big.mark = ".", decimal.mark = ",", accuracy = 0.001),
    valor_desp = number(valor_desp, big.mark = ".", decimal.mark = ",", accuracy = 0.001),
    valor_saldo = number(valor_saldo, big.mark = ".", decimal.mark = ",", accuracy = 0.001)
  ) %>% select(data_fmt, valor_rec, valor_desp, valor_saldo, date) %>% 
  arrange(desc(date))

# TRANSAÇÕES CORRENTES COMO % DO PIB:
pib_dol <- get_series(
  code = c(valor_pib_dol = 4385)
)

pib_dol <- pib_dol %>% mutate(
  pib_dol_12m = rollsum(valor_pib_dol, k = 12,  align = "right", na.pad = TRUE)
)

trans_corr_12m <- get_series(
  code = c(valor_trans_corr_12m = 22701)
)

trans_corr_12m <- trans_corr_12m %>% mutate(
  trans_corr_12m = rollsum(valor_trans_corr_12m, k = 12,  align = "right", na.pad = TRUE)
)

trans_corr_pib <- left_join(as_tibble(trans_corr_12m), as_tibble(pib_dol)) %>% drop_na() %>% select(
  date, trans_corr_12m, pib_dol_12m
) %>% mutate(
  trans_corr_pib = (trans_corr_12m/pib_dol_12m) * 100,
  trans_corr_12m = trans_corr_12m / 1000
)

trans_corr_pib <- trans_corr_pib %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    trans_corr_12m = number(trans_corr_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.001),
    trans_corr_pib = number(trans_corr_pib, decimal.mark = ",", accuracy = 0.01)
  ) %>%
  arrange(desc(date)) %>%
  select(data_fmt, trans_corr_12m, trans_corr_pib, date)

trans_cor <- left_join(trans_cor, trans_corr_pib) %>%
  select(data_fmt, valor_rec, valor_desp, valor_saldo, trans_corr_12m, trans_corr_pib, date)

# BALANÇA COMERCIAL:
bc_exp <- get_series(
  code = c(valor_exp = 22708)
)

bc_imp <- get_series(
  code = c(valor_imp = 22709)
)

bc_saldo <- get_series(
  code = c(valor_saldo = 22707)
)

bal_com <- left_join(bc_exp, bc_imp)
bal_com <- left_join(bal_com, bc_saldo)

bal_com <- bal_com %>% mutate(
    valor_exp = valor_exp / 1000,
    valor_imp = valor_imp / 1000,
    valor_saldo = valor_saldo / 1000
) %>% 
  mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_exp = number(valor_exp, big.mark = ".", decimal.mark = ",", accuracy = 0.001),
    valor_imp = number(valor_imp, big.mark = ".", decimal.mark = ",", accuracy = 0.001),
    valor_saldo = number(valor_saldo, big.mark = ".", decimal.mark = ",", accuracy = 0.001)
  ) %>% select(data_fmt, valor_exp, valor_imp, valor_saldo, date) %>% 
  arrange(desc(date))

# BALANÇA COMERCIAL COMO % DO PIB:
bal_com_12m <- get_series(
  code = c(valor_bal_com_12m = 22707)
)

bal_com_12m <- bal_com_12m %>% mutate(
  bal_com_12m = rollsum(valor_bal_com_12m, k = 12,  align = "right", na.pad = TRUE)
)

bal_com_pib <- left_join(as_tibble(bal_com_12m), as_tibble(pib_dol)) %>% drop_na() %>% select(
  date, bal_com_12m, pib_dol_12m
) %>% mutate(
  bal_com_pib = (bal_com_12m/pib_dol_12m) * 100,
  bal_com_12m = bal_com_12m / 1000
)

bal_com_pib <- bal_com_pib %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    bal_com_12m = number(bal_com_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.001),
    bal_com_pib = number(bal_com_pib, decimal.mark = ",", accuracy = 0.01)
  ) %>%
  arrange(desc(date)) %>%
  select(data_fmt, bal_com_12m, bal_com_pib, date)

bal_com <- left_join(bal_com, bal_com_pib) %>%
  select(data_fmt, valor_exp, valor_imp, valor_saldo, bal_com_12m, bal_com_pib, date)

