## Produção:
lspa_prod <- sidrar::get_sidra(
  api = "/t/6588/n1/all/v/35/p/last%20200/c48/0,39428,39447,39448,39449,39450,39451,39452,39453,39456,39457,39458,39459,39460,39461,39462,39463,39464,39465,39467,39468,39469,39470,39471,40527"
)

