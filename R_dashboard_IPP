# UTILIZAÇÃO DA CAPACIDADE INSTALADA (INDÚSTRIA DE TRANSFORMAÇÃO):
uci <- get_series(
  code = c(valor_uci = 24352)
) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  var_mg = valor_uci - lag(valor_uci)
) %>% mutate(
  valor_uci = number(valor_uci, decimal.mark = ",", accuracy = 0.1),
  var_mg = number(var_mg, decimal.mark = ",", accuracy = 0.1),
) %>% select(data_fmt, valor_uci, var_mg, date) %>% arrange(desc(date))

# IPC-DI:
ipc_di <- ipeadata(code = "IGP12_IPCG12") %>% mutate(
  valor_ipc_di = value,
  data_fmt = format(date, "%m/%Y")
) %>% mutate(
  fator_ipc_di = valor_ipc_di / 100 + 1
) %>% mutate(
  ipc_di_12m = rollapply(fator_ipc_di, width = 12, FUN = prod, align = "right", fill = NA)
) %>% mutate(
  ipc_di_12m = (ipc_di_12m - 1) * 100
) %>% mutate(
  valor_ipc_di = number(valor_ipc_di, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  ipc_di_12m = number(ipc_di_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_ipc_di, ipc_di_12m, date) %>% arrange(desc(date)) %>% filter(
  date >= "1996-01-01"
)

# IPA-DI:
ipa_di <- ipeadata(code = "IGP12_IPADIG12") %>% mutate(
  valor_ipa_di = value,
  data_fmt = format(date, "%m/%Y")
) %>% mutate(
  fator_ipa_di = valor_ipa_di / 100 + 1
) %>% mutate(
  ipa_di_12m = rollapply(fator_ipa_di, width = 12, FUN = prod, align = "right", fill = NA)
) %>% mutate(
  ipa_di_12m = (ipa_di_12m - 1) * 100
) %>% mutate(
  valor_ipa_di = number(valor_ipa_di, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  ipa_di_12m = number(ipa_di_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_ipa_di, ipa_di_12m, date) %>% arrange(desc(date)) %>% filter(
  date >= "1996-01-01"
)

# IGP-DI:
igp_di <- ipeadata(code = "IGP12_IGPDIG12") %>% mutate(
  valor_igp_di = value,
  data_fmt = format(date, "%m/%Y")
) %>% mutate(
  fator_igp_di = valor_igp_di / 100 + 1
) %>% mutate(
  igp_di_12m = rollapply(fator_igp_di, width = 12, FUN = prod, align = "right", fill = NA)
) %>% mutate(
  igp_di_12m = (igp_di_12m - 1) * 100
) %>% mutate(
  valor_igp_di = number(valor_igp_di, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
  igp_di_12m = number(igp_di_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
) %>% select(data_fmt, valor_igp_di, igp_di_12m, date) %>% arrange(desc(date)) %>% filter(
  date >= "1996-01-01"
)

# TAXA DE DESEMPREGO:
desemp <- sidrar::get_sidra(
  api = "/t/6381/n1/all/v/4099,8811,8816/p/all/d/v4099%201,v8811%201,v8816%201"
)

desemp <- desemp %>% mutate(
  data = lubridate::ym(`Trimestre Móvel (Código)`),
  variavel = Variável,
  valor = Valor,
  .keep = "none",  
)

desemp_tx_desoc <- desemp %>% dplyr::filter(variavel == "Taxa de desocupação, na semana de referência, das pessoas de 14 anos ou mais de idade") %>% mutate(
  valor_tx_desoc = valor
) %>% mutate(
  data_fmt = format(data, "%m/%Y"),
  valor_tx_desoc = number(valor_tx_desoc, decimal.mark = ",", accuracy = 0.1)
) %>% select(data_fmt, valor_tx_desoc, data)

desemp_mg <- desemp %>% dplyr::filter(variavel == "Variação em relação a três trimestres móveis anteriores - Taxa de desocupação, na semana de referência, das pessoas de 14 anos ou mais de idade") %>% mutate(
  valor_mg = valor
) %>% mutate(
  data_fmt = format(data, "%m/%Y"),
  valor_mg = number(valor_mg, decimal.mark = ",", accuracy = 0.1)
) %>% select(data_fmt, valor_mg, data)

desemp_ano_ant <- desemp %>% dplyr::filter(variavel == "Variação em relação ao mesmo trimestre móvel do ano anterior - Taxa de desocupação, na semana de referência, das pessoas de 14 anos ou mais de idade") %>% mutate(
  valor_ano_ant = valor
) %>% mutate(
  data_fmt = format(data, "%m/%Y"),
  valor_ano_ant = number(valor_ano_ant, decimal.mark = ",", accuracy = 0.1)
) %>% select(data_fmt, valor_ano_ant, data)

desocup <- desemp_tx_desoc %>% left_join(desemp_mg) %>% left_join(desemp_ano_ant) %>% 
  select(data_fmt, valor_tx_desoc, valor_mg, valor_ano_ant, data) %>% arrange(desc(data))

# OCUPAÇÃO:
ocup <- sidrar::get_sidra(
  api = "/t/6323/n1/all/v/4090,8431,8436/p/all/c888/all"
)

ocup <- ocup %>% mutate(
  date = lubridate::ym(`Trimestre Móvel (Código)`),
  variavel = Variável,
  valor = Valor,
  grupo = `Grupamento de atividade no trabalho principal`,
  .keep = "none"
)

