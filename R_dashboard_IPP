    valor_rn_munic_acum_12m_pib = number(valor_rn_munic_acum_12m_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
  ) %>% select(data_fmt, valor_rn_munic_reais_corr, valor_rn_munic_acum_ano, valor_rn_munic_acum_12m, valor_rn_munic_mensal_pib, valor_rn_munic_acum_ano_pib, valor_rn_munic_acum_12m_pib, date) %>% 
