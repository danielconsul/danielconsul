dl_gfbc <- get_series(
  code = c(valor_dl_gfbc = 4468)
) %>% dplyr::filter(date >= "1995-01-01")

dl_gf <- get_series(
  code = c(valor_dl_gf = 4469)
)

dl_bc <- get_series(
  code = c(valor_dl_bc = 4470)
)

dl_govem <- get_series(
  code = c(valor_dl_govem = 4471)
) %>% dplyr::filter(date >= "1995-01-01")

dl_gove <- get_series(
  code = c(valor_dl_gove = 4472)
)

dl_govm <- get_series(
  code = c(valor_dl_govm = 4473)
)

dl_estat <- get_series(
  code = c(valor_dl_estat = 4474)
)

dl_estatfed <- get_series(
  code = c(valor_dl_estatfed = 4475)
)

