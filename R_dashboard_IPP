  data = rs, 
  x = ~date, 
  y = ~as.numeric(gsub(",", ".", valor_saldo)),
  type = "scatter",
  mode = "lines"
) %>%
  layout(
    xaxis = list(title = " "),
    yaxis = list(
      title = "US$ bilhões",
      range = c(-1, 1),
      dtick = 1
    )
  ) %>%
  rangeslider(thickness = 0.05)
