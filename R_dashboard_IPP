  `Agricultura, pecuária, produção florestal, pesca e aquicultura` = number(`Agricultura, pecuária, produção florestal, pesca e aquicultura`, big.mark = ".", decimal.mark = ","),
  `Indústria geral` = number(`Indústria geral`, big.mark = ".", decimal.mark = ","),
