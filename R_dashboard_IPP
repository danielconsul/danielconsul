) %>% select(data_fmt, `Total`, `1 Cereais, leguminosas e oleaginosas`, `2 Abacaxi`, `3 Alho`, `4 Banana`, `5 Batata - inglesa (1ª Safra)`, `6 Batata - inglesa (2ª Safra)`, `7 Batata - inglesa (3ª Safra)`, `8 Cacau`, `9/10 Café total`, `11 Cana-de-açúcar`, `12 Castanha-de-caju`, `13 Cebola`, `14 Coco-da-baía`, `15 Fumo`, `16 Guaraná`, `17 Juta`, `18 Laranja`, `19 Maçã`, `20 Malva`, `21 Mandioca`, `22 Pimenta-do-reino`, `23 Sisal ou agave`, `24 Tomate`,`25 Uva`, date) %>% arrange(desc(date))

