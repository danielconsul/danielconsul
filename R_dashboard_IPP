# LEVANTAMENTO SISTEMÁTICO DA PRODUÇÃO AGRÍCOLA:
## Área plantada:

lspa_area_plant <- sidrar::get_sidra(
  api = "/t/6588/n1/all/v/109/p/last%20200/c48/0,39428,39447,39448,39449,39450,39451,39452,39453,39456,39457,39458,39459,39460,39461,39462,39463,39464,39465,39467,39468,39469,39470,39471,40527"
)

lspa_area_plant <- lspa_area_plant %>% mutate(
  date = lubridate::ym(`Mês (Código)`),
  produto_area_plant = `Produto das lavouras`,
  valor_area_plant = Valor,
  .keep = "none"
) %>% pivot_wider(names_from = produto_area_plant, values_from = valor_area_plant) %>% mutate(
  data_fmt = format(date, "%m/%Y"),
  `Total` = number(`Total`, big.mark = ".", decimal.mark = ","),
  `1 Cereais, leguminosas e oleaginosas` = number(`1 Cereais, leguminosas e oleaginosas`, big.mark = ".", decimal.mark = ","),
  `2 Abacaxi` = number(`2 Abacaxi`, big.mark = ".", decimal.mark = ","),
  `3 Alho` = number(`3 Alho`, big.mark = ".", decimal.mark = ","),
  `4 Banana` = number(`4 Banana`, big.mark = ".", decimal.mark = ","),
  `5 Batata - inglesa (1ª Safra)` = number(`5 Batata - inglesa (1ª Safra)`, big.mark = ".", decimal.mark = ","),
  `6 Batata - inglesa (2ª Safra)` = number(`6 Batata - inglesa (2ª Safra)`, big.mark = ".", decimal.mark = ","),
  `7 Batata - inglesa (3ª Safra)` = number(`7 Batata - inglesa (3ª Safra)`, big.mark = ".", decimal.mark = ","),
  `8 Cacau` = number(`8 Cacau`, big.mark = ".", decimal.mark = ","),
  `9/10 Café total` = number(`9/10 Café total`, big.mark = ".", decimal.mark = ","),
  `11 Cana-de-açúcar` = number(`11 Cana-de-açúcar`, big.mark = ".", decimal.mark = ","),
  `12 Castanha-de-caju` = number(`12 Castanha-de-caju`, big.mark = ".", decimal.mark = ","),
  `13 Cebola` = number(`13 Cebola`, big.mark = ".", decimal.mark = ","),
  `14 Coco-da-baía` = number(`14 Coco-da-baía`, big.mark = ".", decimal.mark = ","),
  `15 Fumo` = number(`15 Fumo`, big.mark = ".", decimal.mark = ","),
  `16 Guaraná` = number(`16 Guaraná`, big.mark = ".", decimal.mark = ","),
  `17 Juta` = number(`17 Juta`, big.mark = ".", decimal.mark = ","),
  `18 Laranja` = number(`18 Laranja`, big.mark = ".", decimal.mark = ","),
  `19 Maçã` = number(`19 Maçã`, big.mark = ".", decimal.mark = ","),
  `20 Malva` = number(`20 Malva`, big.mark = ".", decimal.mark = ","),
  `21 Mandioca` = number(`21 Mandioca`, big.mark = ".", decimal.mark = ","),
  `22 Pimenta-do-reino` = number(`22 Pimenta-do-reino`, big.mark = ".", decimal.mark = ","),
  `23 Sisal ou agave` = number(`23 Sisal ou agave`, big.mark = ".", decimal.mark = ","),
  `24 Tomate` = number(`24 Tomate`, big.mark = ".", decimal.mark = ","),
