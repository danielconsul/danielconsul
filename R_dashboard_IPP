  code = c(valor_dl_spc = 4478)
)

divida_liq_reais <- dl_gfbc %>% 
  left_join(dl_gf) %>%
  left_join(dl_bc) %>% 
  left_join(dl_govem) %>% 
  left_join(dl_gove) %>% 
  left_join(dl_govm) %>% 
  left_join(dl_estat) %>% 
  left_join(dl_estatfed) %>% 
  left_join(dl_estatestad) %>% 
  left_join(dl_estatmunic) %>% 
  left_join(dl_spc) %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_dl_gfbc = number(valor_dl_gfbc, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_gf = number(valor_dl_gf, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_bc = number(valor_dl_bc, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_govem = number(valor_dl_govem, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_gove = number(valor_dl_gove, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_govm = number(valor_dl_govm, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_estat = number(valor_dl_estat, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_estatfed = number(valor_dl_estatfed, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_estatestad = number(valor_dl_estatestad, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_estatmunic = number(valor_dl_estatmunic, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_dl_spc = number(valor_dl_spc, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
  ) %>% select(data_fmt, valor_dl_gfbc, valor_dl_gf, valor_dl_bc, valor_dl_govem, valor_dl_gove, valor_dl_govm, valor_dl_estat, valor_dl_estatfed, valor_dl_estatestad, valor_dl_estatmunic, valor_dl_spc, date) %>% 
  arrange(desc(date))

