# MASSA DE RENDIMENTO HABITUAL:
massa_rend_hab <- sidrar::get_sidra(
  api = "/t/6392/n1/all/v/6288,6293,8909,8910,8914,8915,8920,8921,8925,8926/p/all/d/v8909%201,v8914%201,v8920%201,v8925%201"
)

massa_rend_hab <- massa_rend_hab %>% mutate(
  date = lubridate::ym(`Trimestre Móvel (Código)`),
  variavel = Variável,
  valor = Valor,
  .keep = "none"
)

