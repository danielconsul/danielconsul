    data_fmt = format(date, "%m/%Y"),
    valor_rn_munic_reais_corr = number(valor_rn_munic_reais_corr, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rn_munic_acum_ano = number(valor_rn_munic_acum_ano, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rn_munic_acum_12m = number(valor_rn_munic_acum_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_rn_munic_mensal_pib = number(valor_rn_munic_mensal_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
