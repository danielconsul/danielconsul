) %>%
  mutate(
    data_fmt = format(date, "%d/%m/%Y"),
    valor_imp = number(valor_imp, big.mark = ".", decimal.mark = ",", accuracy = 0.01)
  ) %>%
  select(data_fmt, valor_imp, date)

