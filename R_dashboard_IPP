# JUROS NOMINAIS:
## GOVERNO CENTRAL (GOVERNO FEDERAL + BANCO CENTRAL):
juros_nom_gc_reais_corr <- get_series(
  code = c(valor_juros_nom_gc_reais_corr = 4606)
) %>% dplyr::filter(date >= "1996-01-01")

juros_nom_gc_acum_ano <- get_series(
  code = c(valor_juros_nom_gc_acum_ano = 4749)
) %>% dplyr::filter(date >= "1996-01-01")

juros_nom_gc_acum_12m <- get_series(
  code = c(valor_juros_nom_gc_acum_12m = 5035)
) %>% dplyr::filter(date >= "1996-01-01")

juros_nom_gc_mensal_pib <- get_series(
  code = c(valor_juros_nom_gc_mensal_pib = 5321)
) %>% dplyr::filter(date >= "1996-01-01")

juros_nom_gc_acum_ano_pib <- get_series(
  code = c(valor_juros_nom_gc_acum_ano_pib = 5464)
) %>% dplyr::filter(date >= "1996-01-01")

juros_nom_gc_acum_12m_pib <- get_series(
  code = c(valor_juros_nom_gc_acum_12m_pib = 5750)
) %>% dplyr::filter(date >= "1996-01-01")

juros_nom_gc <- juros_nom_gc_reais_corr %>% 
  left_join(juros_nom_gc_acum_ano) %>% 
  left_join(juros_nom_gc_acum_12m) %>% 
  left_join(juros_nom_gc_mensal_pib) %>% 
  left_join(juros_nom_gc_acum_ano_pib) %>% 
  left_join(juros_nom_gc_acum_12m_pib) %>% mutate(
    data_fmt = format(date, "%m/%Y"),
    valor_juros_nom_gc_reais_corr = number(valor_juros_nom_gc_reais_corr, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_juros_nom_gc_acum_ano = number(valor_juros_nom_gc_acum_ano, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_juros_nom_gc_acum_12m = number(valor_juros_nom_gc_acum_12m, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
    valor_juros_nom_gc_mensal_pib = number(valor_juros_nom_gc_mensal_pib, big.mark = ".", decimal.mark = ",", accuracy = 0.01),
