# Conta capital (códigos 22851, 22852 e 22853)
cc_rec <- get_series(
  code = c(valor_rec = 22852)
)

cc_desp <- get_series(
  code = c(valor_desp = 22853)
)

cc_saldo <- get_series(
  code = c(valor_saldo = 22851)
)

